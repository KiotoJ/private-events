<div class="container">
  <h1 class="text-center">Users</h1>
  <p>
    <h3>Info</h3>
    Email: <%= @user.email %>
  </p>

  <div class="row">
    <div class="col">
      <h3>All Created events</h3>
      <ul>
      <% if @user.events.present? %>
        <% @user.events.find_each do |event| %>
          <li><%= event.event_date %></li>
        <% end %>
      <% else %>
          None
      <% end %>
      </ul>
    </div>
    <div class="col">
      <h3 class="text-center">All Attended events</h3>
      <div class="row">
        <div class="col">
          <h4> Past events </h4>
          <ul>
            <% @user.attended_events.where('event_date <= ?', Date.today).find_each do |event| %>
                <li><%= event.event_date %></li>
            <% end %>
          </ul>
        </div>
        <div class="col">
          <h4> Future events </h4>
          <ul>
            <% @user.attended_events.where('event_date > ?', Date.today).find_each do |event| %>
                <li><%= event.event_date %></li>
            <% end %>
          </ul>
        </div>
      </div>
    </div>
  </div>
</div>

