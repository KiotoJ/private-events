<div class="container">
  <%= link_to current_user.email, "users/#{current_user.id}" %>
</div>
<div class="container">
  <h1 class="text-center" action="/events/new">All Events</h1>

  <div class="actions">
    <a href="/events/new">
      New Events
    </a>
  </div>
  <ul>
    <h4> Past events </h4>
      <% Event.past.each do |event| %>
        <li>
          <%= link_to event do %>
            <%= event.event_place %> / <%= event.event_date %>
          <% end %>
        </li>
      <% end %>
    <h4> Future events </h4>

    <% Event.future.each do |event| %>
      <li>
        <%= link_to event do %>
          <%= event.event_place %> / <%= event.event_date %>
        <% end %>
      </li>
    <% end %>
  </ul>
</div>
